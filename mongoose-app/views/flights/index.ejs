<%- include('../partials/header') %>

<h2>Flight List</h2>
<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight Number</th>
      <th>Departure Date</th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(function(f) { %>
        <tr>
            <li>
                <form 
                action="/flights/<%= f.id %>?_method=DELETE" 
                method="POST"
                class="delete-form"
                >
                    <button type="submit">X</button>
                </form>
                <td><%= f.airline %></td>
                <td><%= f.airport %></td>
                <td><%= f.flightNo %></td>
                <td><%= f.departs%></td>
            </li>
        </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>
