<%- include('../partials/header') %>



<h2>Create a New Flight</h2>

<form method="POST" action="/flights">
  <label for="airline">Airline:</label>
  <input type="text" id="airline" name="airline" required>

  <label for="airport">Airport:</label>
  <input type="text" id="airport" name="airport" required>

  <label for="flightNo">Flight Number:</label>
  <input type="number" id="flightNo" name="flightNo" required>

  <label for="departs">Departs:</label>
  <input type="datetime-local" id="departs" name="departs" required>

  <button type="submit">Create Flight</button>
</form>

<p class="error"><%= errorMsg %></p>



<%- include('../partials/footer') %>